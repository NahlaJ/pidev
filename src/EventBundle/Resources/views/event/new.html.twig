{% block content %}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Create New Event</h4>
                    </div>
                    <div class="card-body">
                {{ form_start(form) }}

                <h6>Name</h6>
                {{ form_widget(form.nomevent) }}

                <h6 style="margin-top: 20px">Description</h6>
                {{ form_widget(form.description) }}

                <br>
                <h6 style="margin-top: 20px">Date</h6>
                {{ form_widget(form.dateevent ) }}


                <br>
                <h6 style="margin-top: 20px">Place</h6>
                {{ form_widget(form.lieuevent ) }}


                <br>
                <h6 style="margin-top: 20px">Capacity</h6>
                {{ form_widget(form.capevent) }}


                <br>
                <h6 style="margin-top: 20px">Price</h6>
                {{ form_widget(form.ticketprice) }}


                <br>
                <h6 style="margin-top: 20px">Nbr Personne</h6>
                {{ form_widget(form.nbrepersonnes) }}


                <br>
                <h6 style="margin-top: 20px">Add an image</h6>
                {{ form_widget(form.eventImg, {'type' : 'file', 'attr' : {'class' : 'form-control', 'placeholder' : ' '}} ) }}


                <div class="clearfix" style="margin-top: 20px"></div>
                <input type="submit" id="add_event" class="btn btn-primary btn-block" style="width: 50%; margin-left: 25%" value="Add">
                <br>
                {{ form_end(form) }}
            </div>
