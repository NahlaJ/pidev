{% extends 'base.html.twig' %}

{% block stylesheet %}
    <style>
        .ul888 {
            list-style-type: none;
            margin: 0;
            padding: 0;
            width: 200px;
            background-color: #f1f1f1;
        }

        .li888 a {
            display: block;
            color: #000;
            padding: 8px 16px;
            text-decoration: none;
        }

        /* Change the link color on hover */
        .li888 a:hover {
            background-color: #555;
            color: white;
        }

    </style>
{% endblock %}

{% block content %}

    <div class="parts">
        <div class="container">
            <h2>Our Products </h2>
            <div class="bike-parts-sec">
                <div class="bike-parts">
                    <div class="top">
                        <ul>
                            <li><a href="#"></a>Home </li>
                            <li><a href="#"> / </a></li>
                            <li><a href="#"> Products</a></li>
                        </ul>
                    </div>
                    <div class="bike-apparels">
                        <div class="parts1">
                            {% for produit in produits %}
                                {% if produit.promo != null  %}
                                    {% if produit.promo.dateDebut <= now %}
                                    <a href="{{ path('produit_single', { 'id': produit.id }) }}"><div class="part-sec">
                                            <img src="{{ asset('uploads/images/'~ produit.image )}}" alt=""/>
                                            <div class="part-info">
                                                <a href="{{ path('produit_single', { 'id': produit.id }) }}"><h5>{{ produit.nom }} <span><i style="color: seagreen">On Discount</i><span><label>$</label><del>{{ produit.prix }}</del> <label> $ </label> {{ produit.promo.newPrix }}</span></h5></a>
                                                <a class="add-cart" href="{{ path('produit_single', { 'id': produit.id }) }}">Quick View</a>
                                                <a class="qck" href="#">BUY NOW</a>
                                            </div>
                                        </div></a>

                                    {% else %}

                                        <a href="{{ path('produit_single', { 'id': produit.id }) }}"><div class="part-sec">
                                                <img src="{{ asset('uploads/images/'~ produit.image )}}" alt=""/>
