{% extends 'base.html.twig' %}


{% block content %}

    <div class="bikes">
        <div class="mountain-sec">
            <h2>Our Categories</h2>
            {% for categorie in categories %}
            <a href="{{ path('produit_trier', { 'id': categorie.id }) }}"><div class="bike">
                    <img src="{{ asset('uploads/images/'~ categorie.image )}}" width="100px" height="250px" alt=""/>
                    <div class="bike-cost">
                        <div class="bike-mdl">
                            <h4>{{ categorie.nom }}</h4>
                        </div>
                        <div class="bike-cart">
                            <a class="buy" href="{{ path('produit_trier', { 'id': categorie.id }) }}">Check This</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="fast-viw">
                        <a href="{{ path('produit_trier', { 'id': categorie.id }) }}">Quick View</a>
                    </div>
                </div></a>
            {% endfor %}
            <div class="clearfix"></div>
        </div>
    </div>
{% endblock %}
