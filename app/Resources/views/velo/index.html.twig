            <section class="featured section-padding">
                <div class="container">
                    <div class="row">
                        <div class="col-12 text-center">
                            <div class="heading">
                                <h1 class="section-title">Velo A Louer</h1>
                            </div>
                        </div>
                        {% for velo in velos %}
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-4">
                                <div class="featured-box">
                                    <figure>
                                        <a href="{{ path('velo_show',{'id': velo.id}) }}"><img class="img-fluid" src="{{ asset('post/' ~ velo.image) }}"  width="300" height="250" alt=""></a>
                                    </figure>
                                    <div class="content-wrapper">
                                        <div class="feature-content">
                                            <p class="listing-tagline">{{ velo.marque }}</p>
                                            <div class="meta-tag">
                                                <div class="user-name">
                                                    <a href="#"><i class="lni-user"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="listing-bottom clearfix">
                                            <div class="btn-group">
                                                <a href="{{ path('velo_edit',{'id': velo.id}) }}"><button type="button" class="btn btn-sm btn-outline-info">Update</button></a>
                                                <a href="{{ path('velo_show',{'id': velo.id}) }}"><button type="button" class="btn btn-sm btn-outline-primary">View</button></a>
                                                {% if velo.etat==0 %}
                                                <a href="{{ path('accepter',{'id': velo.id}) }}"><button type="button" class="btn btn-sm btn-outline-info">confirmer</button></a>
                                                {% else %}
                                                    <a href="{{ path('accepter',{'id': velo.id}) }}"><button type="button" class="btn btn-sm btn-outline-danger">confirmer</button></a>
                                                    {% endif %}
                                                    </div>
                                        </div>
