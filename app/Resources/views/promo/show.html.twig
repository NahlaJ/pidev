{% block content %}
    <h1>Promo</h1>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">{{ promo.titre }}</h4>
                        <p class="card-category">Product id : {{ promo.id }} </p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">

        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promo.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ promo.titre }}</td>
            </tr>
            <tr>
                <th>Product</th>
                <td><a href="{{ path('produit_show', { 'id': promo.produit.id }) }}">{{ promo.produit.nom }}</a></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ promo.description }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if promo.dateDebut %}{{ promo.dateDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if promo.dateFin %}{{ promo.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Remise</th>
                <td>{{ promo.remise }}</td>
            </tr>
            <tr>
                <th>New Price</th>
                <td>{{ promo.newPrix }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ promo.quantite }}</td>
            </tr>

        </tbody>
    </table>
<center>
    <ul>
        <li>
            <a href="{{ path('promo_index') }}"><img src="{{ asset('images/back.png') }}" width="50" height="50"></a>
        </li>
        <li>
            <a href="{{ path('promo_edit', { 'id': promo.id }) }}"><img src="{{ asset('images/update.png') }}" width="50" height="50"></a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="image" alt="submit" src="{{ asset('images/delete.png') }}" width="50" height="50">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
