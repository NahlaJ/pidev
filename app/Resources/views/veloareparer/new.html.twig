{% extends 'base.html.twig' %}

{% block content %}

    {% if  is_granted('IS_AUTHENTICATED_REMEMBERED') %}
<center>
    <div class="card-header">

    <h3 class="card-title">Add the Bike</h3>
    </div>
    <style>
        .input999[type=text], select {
            width: 50%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .input999[type=submit] {
            width: 20%;
            background-color: lightskyblue;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .input999[type=submit]:hover {
            background-color: #45a049;
        }


        .div999 {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
        }

    </style>

<div class="div999">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" class="input999" value="Create" />
    {{ form_end(form) }}

</div>


</center>
    {% else %}
        <center><strong><p style="font-size: 50px"> Please LOGIN or SIGN UP </p></strong></center>

    {% endif %}

{% endblock %}
